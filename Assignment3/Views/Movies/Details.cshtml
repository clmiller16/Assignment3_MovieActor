@model Assignment3.Models.MovieWikiVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.oldModel.movie.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.oldModel.movie.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.oldModel.movie.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.oldModel.movie.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.oldModel.movie.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.oldModel.movie.Director)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.oldModel.movie.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.oldModel.movie.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.oldModel.movie.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.oldModel.movie.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.oldModel.movie.Hyperlink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.oldModel.movie.Hyperlink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.oldModel.movie.MovieImage)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.oldModel.movie.MovieImage != null && Model.oldModel.movie.MovieImage.Length != 0)
            {
                <img height="150" src="@Url.Action("GetMoviePhoto", "Movies", new {Model.oldModel.movie.Id})" />
            }
        </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.oldModel.sentiment)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.oldModel.sentiment)
                </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.oldModel.movie.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<br />
<h1>
    Actors in @Html.DisplayFor(model => model.oldModel.movie.Title)
</h1>
<table id="indexTable" class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Age
        </th>
        <th>
            Gender
        </th>
        <th>
            Hyperlink
        </th>
        <th>
            Actor Image
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.oldModel.actors)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hyperlink)
            </td>
            <td>
                @if (item.ActorImage != null && item.ActorImage.Length != 0)
                {
                    <img height="150" src="@Url.Action("GetActorPhoto", "Actors", new {item.Id})" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Actors" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-controller="Actors" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
    }
    </tbody>
</table>
<table id="indexTable" class="table">
    <thead>
    <tr>
        <th>
            Post
        </th>
        <th>
            Score
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.pages)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item)
            </td>
            <td>
                @Html.DisplayFor(model => model.oldModel.sentiment)
            </td>
        </tr>
    }
    </tbody>
</table>